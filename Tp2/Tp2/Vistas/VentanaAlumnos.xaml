<Window x:Class="Tp2.VentanaAlumnos"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tp2"
        mc:Ignorable="d"
        Title="VentanaAlumnos" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="txbnombreA" Height="35" Margin="10,42,560,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top"/>
        <Label x:Name="label" Content="Nombre" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="214" Height="25"/>
        <Label x:Name="label1" Content="Apellido" HorizontalAlignment="Left" Margin="10,85,0,0" VerticalAlignment="Top" Height="34" Width="150"/>
        <TextBox x:Name="txbapellidoA" HorizontalAlignment="Left" Height="34" Margin="10,124,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="222"/>
        <Label x:Name="label2" Content="DNI" HorizontalAlignment="Left" Margin="10,174,0,0" VerticalAlignment="Top" Height="34" Width="86"/>
        <TextBox x:Name="txbdniA" HorizontalAlignment="Left" Height="34" Margin="10,213,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="222"/>
        <Label x:Name="label3" Content="Fecha de nacimiento" HorizontalAlignment="Left" Margin="10,263,0,0" VerticalAlignment="Top" Height="34" Width="137"/>
        <DatePicker x:Name="dtpfechanacA" HorizontalAlignment="Left" Margin="10,302,0,0" VerticalAlignment="Top" Height="36" Width="222"/>
        <Button x:Name="btnagregarA" Content="Agregar" HorizontalAlignment="Left" Margin="10,353,0,0" VerticalAlignment="Top" Width="208" Height="30" Click="BtnagregarA_Click"/>
        <ListBox x:Name="lbxalumnos" HorizontalAlignment="Left" Height="284" Margin="413,42,0,0" VerticalAlignment="Top" Width="278"/>
        <Label x:Name="label4" Content="Lista de alumnos" HorizontalAlignment="Left" Margin="413,3,0,0" VerticalAlignment="Top" Height="39" Width="275"/>

    </Grid>
</Window>
